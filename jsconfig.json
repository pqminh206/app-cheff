{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "root": ["./*"],
      "assets/*": ["./src/assets/*"],
      "components/*": ["./src/components/*"],
      "contexts/*": ["./src/contexts/*"],
      "features/*": ["./src/features/*"],
      "hooks/*": ["./src/hooks/*"],
      "navigation/*": ["./src/navigation/*"],
      "services/*": ["./src/services/*"],
      "utils/*": ["./src/utils/*"],
    },
  },
  "exclude": ["node_modules"]
}